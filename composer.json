{
  "name": "wyrihaximus/get-in-packages-composer.jason",
  "description": "Functions around joshdifabio/composed and igorw/get-in to gather configuration from composer.json",
  "license": "MIT",
  "authors": [
    {
      "name": "Cees-Jan Kiewiet",
      "email": "ceesjank@gmail.com",
      "homepage": "http://wyrihaximus.net/"
    }
  ],
  "require": {
    "php": "^8.4",
    "ext-json": "^8.4",
    "composer/composer": "^2.8",
    "igorw/get-in": "^1.0.3"
  },
  "require-dev": {
    "wyrihaximus/makefiles": "^0.5.0",
    "wyrihaximus/test-utilities": "^8.5.0"
  },
  "autoload": {
    "psr-4": {
      "WyriHaximus\\": "src/"
    },
    "files": [
      "src/functions_include.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "WyriHaximus\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "drupol/composer-packages": true,
      "ergebnis/composer-normalize": true,
      "icanhazstring/composer-unused": true,
      "infection/extension-installer": true,
      "mindplay/composer-locator": true,
      "phpstan/extension-installer": true,
      "wyrihaximus/makefiles": true,
      "wyrihaximus/test-utilities": true
    },
    "platform": {
      "php": "8.4.13"
    },
    "sort-packages": true
  },
  "scripts": {
    "post-install-cmd": [
      "make on-install-or-update || true"
    ],
    "post-update-cmd": [
      "make on-install-or-update || true"
    ]
  }
}
